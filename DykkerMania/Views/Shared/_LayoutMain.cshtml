    <!-- Trigger/Open The Modal -->

    <div style="background-color:#3498db; border: solid 0px black; padding-left: 48%; height:95px; padding-top:20px;">
        <span id="myBtn"><i class="fa fa-arrow-up fa-3x"></i></span>
    </div>

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">

            <span class="close">&times;</span>

            <footer>



